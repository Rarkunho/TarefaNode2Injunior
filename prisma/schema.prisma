generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  nome         String
  email        String  @unique
  senha_digest String
  foto         String?
  posts        Post[]

  @@map("Usuarios")
}

model Post {
  id         String   @id @default(uuid())
  titulo     String
  conteudo   String
  created_at DateTime
  idAutor    String
  autor      User     @relation(fields: [idAutor], references: [id])

  @@map("Posts")
}
