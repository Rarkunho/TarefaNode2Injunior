generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  nome         String
  email        String       @unique
  senha_digest String
  foto         String?
  posts        Post[]
  comentarios  Comentario[]
  likes        Like[]

  @@map("Usuarios")
}

model Post {
  id          String       @id @default(uuid())
  titulo      String
  conteudo    String
  created_at  DateTime
  idAutor     String
  autor       User         @relation(fields: [idAutor], references: [id])
  comentarios Comentario[]
  likes       Like[]

  @@map("Posts")
}

model Comentario {
  id         String   @id @default(uuid())
  conteudo   String
  created_at DateTime
  idAutor    String
  autor      User     @relation(fields: [idAutor], references: [id])
  idPost     String
  post       Post     @relation(fields: [idPost], references: [id])
  likes      Like[]

  @@map("Comentarios")
}

model Like {
  id           String      @id @default(uuid())
  idUser       String
  user         User        @relation(fields: [idUser], references: [id])
  idPost       String?
  post         Post?       @relation(fields: [idPost], references: [id])
  idComentario String?
  comentario   Comentario? @relation(fields: [idComentario], references: [id])

  @@map("Likes")
}
